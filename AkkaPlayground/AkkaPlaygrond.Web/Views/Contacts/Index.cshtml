<ion-view view-title="Search the Directory">
    <ion-content class="padding">
        <div class="list padding-list">
            <label class="item item-input">
                <input type="text" placeholder="Search..." ng-model="searchModel.login">
            </label>
        </div>

        <ion-list>
            <ion-item class="item-avatar item-button-right" ng-repeat="user in users">
                <img ng-src="~/Images/user-default.svg">
                <h2>{{user.UserName}}</h2>
                <p>{{user.Login}}</p>

                <button class="button button-add button-calm" ng-click="add(user)" ng-if="!user.IsAlreadyAdded && !user.IsCurrentUser">
                    <i class="icon  ion-ios-plus-outline"></i>
                </button>
            </ion-item>
        </ion-list>
</ion-content>
</ion-view>
