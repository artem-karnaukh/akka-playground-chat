<ion-view view-title="Contact List">
    <ion-content class="padding">
        <ion-refresher pulling-text="pull to refresh..."
                       on-refresh="doRefresh()">
        </ion-refresher>
        <ion-list>
            <ion-item class="item-avatar item-icon-right" ng-repeat="user in users" ng-click="openChat(user)">
                <img ng-src="~/Images/user-default.svg">
                <h2>{{user.UserName}}</h2>
                <p>{{user.Login}}</p>

            </ion-item>
        </ion-list>
    </ion-content>
</ion-view>